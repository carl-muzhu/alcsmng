	function getJsonByTableId(tableId){
    var data ="{";
    $("#"+tableId).find("input, select").each(function(){//遍历表格中的input、select等标签
        var val =  $(this).val();
        if( val == null || val == 'null'){
         val = "";
            }
         data +="\""+ $(this).attr("id") + "\":\"" + val + "\",";
      });
   if(data.length != 1){                                  //如果取出了数据，删除多余的符号
